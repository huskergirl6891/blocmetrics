<h1><%= @application.name %></h1>

<div class="row">
  <div class="col-md-8">
    <h3>URL</h3>
    <%= @application.url %><br><br>
    <h3>Events</h3>
    <% @events.each do |event| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p><%= event[0] %></p>
            <small>Count = <%= event[1].length %></small>
          </h4>
        </div>
      </div>
    <% end %>
    <%= pie_chart @application.events.group(:name).count %>
    <%= line_chart @application.events.group_by_day(:created_at).count %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_application_path(@application), class: 'btn btn-success' %>
    <%= link_to "Delete Application", @application, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this application?'} %>
  </div>
</div>
