<h1><%= @application.name %></h1>

<div class="row">
  <div class="col-md-8">
    <%= @application.url %><br>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_application_path(@application), class: 'btn btn-success' %>
    <%= link_to "Delete Application", @application, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this application?'} %>
  </div>
</div>
